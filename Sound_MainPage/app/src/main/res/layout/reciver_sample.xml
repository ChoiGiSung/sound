            android:layout_height="wrap_content"
            android:text="설정해주세요!"
            android:background="@drawable/roundbtn2"
            android:layout_margin="5dp"

            />
        <Button
            android:id="@+id/btn_smaple2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정해주세요!"
            android:background="@drawable/roundbtn2"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn_smaple3"
